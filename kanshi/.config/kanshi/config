    output eDP-1 enable

    exec hyprctl dispatch movetoworkspace 1,class:firefox 
    exec hyprctl dispatch movetoworkspace 2,class:kitty
    exec hyprctl dispatch movetoworkspace 3,class:jetbrains-phpstorm
    exec hyprctl dispatch movetoworkspace 4,class:org.mozilla.Thunderbird
    exec hyprctl dispatch movetoworkspace 5,class:Slack
    exec hyprctl dispatch movetoworkspace 5,class:WebApp-WhatsApp2961
}

